{
    "name": "faustoq/laravel-flatpack",
    "description": "Flat pack: Administration panel for Laravel, ready to assemble.",
    "keywords": [
        "laravel-flatpack",
        "laravel",
        "flatpack",
        "administration",
        "admin",
        "panel"
    ],
    "homepage": "https://github.com/faustoq/laravel-flatpack",
    "license": "MIT",
    "authors": [
        {
            "name": "Fausto Quaggia",
            "email": "fausto.quaggia@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.73",
        "livewire/livewire": "^2.6",
        "maxeckel/livewire-editorjs": "^1.4",
        "rappasoft/laravel-livewire-tables": "^1.22",
        "symfony/yaml": "^5.0",
        "wireui/wireui": "^1.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.10",
        "orchestra/testbench": "^6.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "pestphp/pest-plugin-livewire": "^1.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Faustoq\\Flatpack\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Faustoq\\Flatpack\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "XDEBUG_MODE=coverage ./vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Faustoq\\Flatpack\\FlatpackServiceProvider"
            ],
            "aliases": {
                "Flatpack": "Faustoq\\Flatpack\\Facades\\Flatpack"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
